package permasalahan1;
public class Operasi {
	private Node HEAD;
	private Mahasiswa mahasiswa;
	
	public boolean isEmpty() {
		if(HEAD == null) {
			return true;
		}
		return false;
	}
	
	public void displayElement() {
		Node curNode = HEAD;
		if (curNode == null) {
			System.out.println("List kosong");
		}
		while (curNode != null) {
			System.out.println(curNode.getData().getNrp());
			System.out.println(curNode.getData().getNama());
			System.out.println(curNode.getData().getJenisKelamin() + "\n");
			curNode = curNode.getNext();
		}
	}
	
	public void addData(Mahasiswa data) {
		Node newNode = new Node(data);
		Node posNode = null;
		Node curNode = null;
		if(isEmpty()) {
			HEAD = newNode;
		} 
		else if(newNode.getData().getJenisKelamin() == 'P'){
			curNode = HEAD;
			while(curNode != null && curNode.getData().getJenisKelamin() == 'P') {
				posNode = curNode;
				curNode = curNode.getNext();
			}
			posNode.setNext(newNode);
			newNode.setNext(curNode);
		} else {
			curNode = HEAD;
			while(curNode != null) {
				posNode = curNode;
				curNode = curNode.getNext();
			}
			posNode.setNext(newNode); 
		}
	}
	
}
