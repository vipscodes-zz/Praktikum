package permasalahan2;

class Stack {
    private Character[] dataStack = new Character[100];
    private int top = -1;
    private int jmlData = 0;

    boolean isEmpty() {
        return(top == -1);
    }

    private boolean isFull() {
        return(top == 9);
    }

    private int dataSize() {
        jmlData = top + 1;
        return(jmlData);
    }


    void push(Character dataPush) {
        if(isFull()) {
            System.out.println("");
        } else {
            top++;
            dataStack[top] = dataPush;
            System.out.println("Data sudah tersimpan");
        }

        dataSize();
    }

    Character pop() {
        Character temp = null;
        if(isEmpty()) {
            System.out.println("Stack masih kosong");
        } else {
            temp = dataStack[top];
            top--;
        }

        dataSize();
        return (temp);
    }

    Character peek() {
        return dataStack[top];
    }
}
